                        @Html.DropDownList("MaKhachHang", null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Từ Ngày", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBox("date1", null, new { @class = "form-control", @type = "date" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Đến Ngày", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBox("date2", null, new { @class = "form-control", @type = "date" })
                    </div>
                </div>
                <button class="btn btn-danger" style="margin-left:520px;">Statistic</button>
            </div>
        </div>
        
    }
</div>

